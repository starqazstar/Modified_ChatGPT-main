{
    "github": {
        "silent": true
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Real-IP",
                    "value": "$remote_addr"
                },
                {
                    "key": " X-Forwarded-For",
                    "value": "$proxy_add_x_forwarded_for"
                },
                {
                    "key": "Host",
                    "value": "$http_host"
                }
            ]
        }
    ],
    "build": {
        "env": {
            "CUSTOM_ENV_VARIABLE": "value"
        },
        "commands": {
            "install": "yarn install --frozen-lockfile",
            "build": "yarn build"
        }
    }
}
